<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MyCustomTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/toolbar</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="titlesPages">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/titleColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inputStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="labelInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/toolbar</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="inputValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/toolbar</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="seekbarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">20</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/toolbar</item>
    </style>

    <style name="fullSizeLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/toolbar</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="actions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- TO-DO DIALOG -->
    <style name="cust_dialog_todo" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_style_todo</item>
    </style>

    <style name="dialog_style_todo" parent="android:Widget.TextView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#ff9f37</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- END TO_DO DIALOG-->

    <!-- budget DIALOG -->
    <style name="cust_dialog_budget" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_style_todo</item>
    </style>

    <style name="dialog_budget" parent="android:Widget.TextView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#857198</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- END budget DIALOG-->



</resources>
